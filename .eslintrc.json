{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "ignorePatterns": ["**/config/**", "**/dist/**", "**/tools/**"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "overrides": [
    {
      "files": ["*/src/**/*.ts"]
    }
  ],
  "plugins": ["@typescript-eslint"],
  "root": true,
  "rules": {
    "object-curly-spacing": ["error", "always"]
  }
}
